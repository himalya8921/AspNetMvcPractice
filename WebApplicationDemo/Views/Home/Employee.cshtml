@model List<EmployeeViewModel>

@{
    ViewData["Title"] = "Employee";
}

<style>
    table {
        width: 100%;
    }
</style>

<h1>Employee</h1>

<div>
    <table>
        <thead>
            <tr>
                <td>Id</td>
                <td>Name</td>
                <td>Age</td>
                <td>Salary</td>
                <td>Designation</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td style="width:20%"><a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="EditEmployee" asp-route-id="@item.Id" >@item.Id</a></td>
                <td style="width:20%" onclick="editEmployee(@item.Id)">@item.Name</td>
                <td style="width:20">@item.Age</td>
                <td style="width:20%">@item.Salary</td>
                <td style="width:20%">@item.Designation</td>
            </tr>
            }
        </tbody>
    </table>
</div>
<br />
<br />
<br />


<div id="EditEmployee">

</div>

<script>
    function editEmployee(id) {


        /*$("#EditEmployee").load('/Home/EditEmployee/' + id);*/
        
         
		$.ajax({
			url: '/Home/EditEmployee/' + id,
			success: function (data) {
				$("#EditEmployee").html(data);
			}
		})
        
	}
</script>
